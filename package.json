{
  "name": "alexjs.com",
  "private": true,
  "version": "0.0.0",
  "description": "The alexjs.com website",
  "license": "MIT",
  "repository": "get-alex/alex",
  "bugs": "https://github.com/get-alex/alex/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "type": "module",
  "devDependencies": {
    "cssnano": "^5.0.0",
    "debounce": "^1.0.0",
    "esbuild": "^0.13.0",
    "global": "^4.0.0",
    "postcss-cli": "^9.0.0",
    "prettier": "^2.0.0",
    "rehype-cli": "^11.0.0",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prevent-favicon-request": "^3.0.0",
    "remark-cli": "^10.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "retext-english": "^4.0.0",
    "retext-equality": "^6.0.0",
    "retext-profanities": "^7.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^22.0.0",
    "unified": "^10.0.0",
    "vfile": "^5.0.0",
    "vfile-sort": "^3.0.0",
    "vfile-statistics": "^2.0.0",
    "virtual-dom": "^2.0.0",
    "xo": "^0.45.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix && stylelint src/index.css --fix",
    "build:js": "esbuild src/index.js --log-level=warning --bundle --minify --target=es6 --outfile=dest/index.nomodule.js && esbuild src/index.js --log-level=warning --bundle --minify --target=es2020 --format=esm --outfile=dest/index.module.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -qf -u preset-minify -u prevent-favicon-request -o dest src",
    "build:asset": "cp src/* dest",
    "build": "npm run build:asset && npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-dom-node-append": "off",
      "guard-for-in": "off"
    }
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
